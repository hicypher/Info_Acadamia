<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_data_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:orientation="vertical"
              android:elevation="4dp"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:elevation="20dp"
            app:cardCornerRadius="3dp">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="3.5"
                          android:layout_marginRight="4dp"
                          android:layout_marginLeft="4dp"
                          android:layout_marginTop="4dp"
                          android:layout_marginBottom="4dp"
                          android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/item_data_list_food_image_cart"

                    android:src="@drawable/circlecropped"
                    app:civ_border_color="#000"
                    app:civ_border_width="2dp"
                   />


            </LinearLayout>



                <LinearLayout android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent"
                            android:id="@+id/item_data_list_item_name_cart"
                            android:hint="Item name"
                            android:textSize="18dp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>

                    <TextView android:layout_width="match_parent"
                            android:id="@+id/item_data_list_shop_name_cart"
                            android:hint="Shop Name"
                            android:padding="2dp"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="â‚¹"
                                android:textSize="20sp"/>
                        <TextView android:layout_width="match_parent"
                                android:id="@+id/item_data_list_prise_cart"
                                android:hint="Price"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000"
                                android:layout_height="match_parent"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="4.7"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="match_parent"
                             android:layout_marginTop="3dp"
                              android:id="@+id/item_data_list_delete"
                              android:background="@drawable/ic_delete_black_24dp"
                              android:layout_height="35dp"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="3"
                          android:layout_height="40dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:textSize="15dp"
                    android:gravity="center"
                          android:textColor="#000"
                          android:textAlignment="textEnd"
                          android:text="Quantity"/>


                <Button android:layout_width="match_parent"
                        android:layout_weight="1.3"
                        android:text="-"
                        android:textSize="10sp"
                        android:id="@+id/item_data_list_button_minus_cart"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textSize="18sp"
                          android:id="@+id/item_data_list_quantity_cart"
                          android:layout_weight="1.3"
                          android:textStyle="bold"
                          android:padding="5dp"
                          android:textColor="#000"
                          android:textAlignment="center"
                          android:text="1"/>
                <Button android:layout_width="match_parent"
                        android:layout_weight="1.3"
                        android:id="@+id/item_data_list_button_plus_cart"
                        android:text="+"
                        android:textSize="10sp"

                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"/>
                <Button android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:text="BUY"
                        android:textSize="15sp"

                        android:id="@+id/item_data_list_cart_buy"
                        android:layout_height="match_parent"/>




            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>